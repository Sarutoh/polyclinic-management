<div class='container mt-2'>
  <%= form_for @appointment do |f| %>
    <%= f.label :description, class: 'form-label'%>
    <%= f.text_field :description, class: 'form-control' %>

    <% if AppointmentsPolicy.new(@appointment).able_to_recomendate? %>
      <%= f.label :recomendation, class: 'form-label'%>
      <%= f.text_field :recomendation, class: 'form-control' %>
    <% end %>
    <div>
      <%= f.submit t('buttons.appointment.update'), class: "btn btn-success mt-2 me-2 float-sm-end" %>
    </div>
  <% end %>
</div>
